@model DergiBiraz.WebMVC.Models.Users.UserListViewModel
@{
    ViewData["Title"] = "GetAllUsers";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <h5 style="padding-top: 10px">Yeni Yönetici Eklemek İçin Tıkla</h5>
                <a class="btn btn-primary rounded-pill" href="/Admins/Users/SignUpForAdmin">Ekle</a>
            </div>
        </div>
    </div>


    @*Article Data Table Start*@
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Kullanıcılar Listesi</h5>
                        @if (Model != null)
                        {
                            <!-- Table with stripped rows -->
                            <table class="table datatable" id="usersTable">
                                <thead>
                                    <tr>
                                        <th scope="col">Adı</th>
                                        <th scope="col">Soyadı</th>
                                        <th scope="col">Mail Adresi</th>
                                        <th scope="col">Hesap Oluşturma Tarihi</th>
                                        <th scope="col">Mail Onay Durumu</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model.Users)
                                    {
                                        <tr>
                                            <td>@user.Name</td>
                                            <td>@user.LastName</td>
                                            <td>@user.Email</td>
                                            <td>@user.CreatedDate</td>
                                            <td>@user.EmailConfirmed</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                        }
                        else
                        {
                            <p>Hiç Yazar Bulunamadı</p>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    @*Article Data Table End*@





</main><!-- End #main -->

