@model DergiBiraz.WebMVC.Models.Articles.ArticleListViewModel
@{
    ViewData["Title"] = "GetAllArticles";
    Layout = "~/Areas/Admins/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">

    @*Article Data Table Start*@
    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yazılar Listesi</h5>
                        @if (Model != null)
                        {
                            <!-- Table with stripped rows -->
                            <table class="table datatable" id="articlesTable">
                                <thead>
                                    <tr>
                                        <th scope="col">ID</th>
                                        <th scope="col">Yazar Bilgisi</th>
                                        <th scope="col">Yazı Adı</th>
                                        <th scope="col">Eklenme Tarihi</th>
                                        <th scope="col">Yazı İçeriği</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var article in Model.Articles)
                                    {
                                        <tr>
                                            <th scope="row">@article.Id</th>
                                            <td>@article.Writer.FirstName @article.Writer.LastName</td>
                                            <td>@article.Name</td>
                                            <td>@article.CreatedDate</td>
                                            <td><a type="button" href="/Admins/Articles/GetArticleDetail/@article.Id" class="btn btn-outline-warning">İçerik</a></td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <!-- End Table with stripped rows -->
                        }
                        else
                        {
                            <p>Hiç Yazar Bulunamadı</p>
                        }

                    </div>
                </div>
            </div>
        </div>
    </section>
    @*Article Data Table End*@





</main><!-- End #main -->

